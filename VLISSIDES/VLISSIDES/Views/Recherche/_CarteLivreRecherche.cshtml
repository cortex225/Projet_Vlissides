@using VLISSIDES.ViewModels.Accueil;
@{
}
@model Livre;

<div class="item livrePetit livre @Model.Categories">
    <div class="card cardLivre" style="width: 12rem; height: 30rem">
        <a asp-area="" asp-controller="Recherche" asp-action="Details" asp-route-id="@Model.Id" method="get" class="imgDiv">
            <img src="@Model.Couverture"
                 class="card-img-top imgLivre"
                 alt="Couverture du livre" />
        </a>
        <div class="card-body">
            <h6 class="card-title">@Model.Titre</h6>

            <h6>@Model.Prix $</h6>

            <h6>Auteurs: </h6>
            @if (Model.Auteur != null)
            {
                @foreach (Auteur a in Model.Auteur)
                {
                    <p>@a.NomComplet</p>
                }
            }

            <h6>Catégories reliées: </h6>
            @{
                foreach (var categorie in Model.Categories)
                {
                    <a href="#" class="btn btn-secondary btnCategorie">@categorie.Nom</a>
                }
            }
        </div>
    </div>
</div>

