@using VLISSIDES.ViewModels.Accueil;
@{
}
@model Livre;

<div class="item livrePetit livre @Model.Categorie">
    <div class="card cardLivreSearch" style="width: 12rem; height: 26rem;;">
        <a asp-area="" asp-controller="Recherche" asp-action="Details" asp-route-id="@Model.Id" method="get"
           class="imgDiv bg-image hover-overlay ripple card-img-top" data-mdb-ripple-color="light">
            <img src="@Model.Couverture"
                 class="card-img-top imgLivre"
                 alt="Couverture du livre" />
        </a>
        <div class="card-body">
            <h6 class="card-title">@Model.Titre</h6>

            @if(Model.LivreTypeLivres.Count <= 0)
            {
                <p><strong>Prix:</strong> Aucun</p>
            }
            else{
                <p><strong>Prix:</strong> @Model.LivreTypeLivres.FirstOrDefault().Prix $</p>
            }

            <h6>Auteurs:</h6>
            @if (Model.Auteur != null)
            {
                <p>@Model.Auteur.NomAuteur</p>
            }

            <h6>Catégories reliées: </h6>
            @{
                <a href="#" class="btn btn-secondary btnCategorie">@Model.Categorie.Nom</a>
            }
        </div>
    </div>
</div>

