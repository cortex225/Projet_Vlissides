@model ResetPasswordVM

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <partial name="PartialViews/_HeadPartial"/>
    <link href="~/assets/css/Register.css" rel="stylesheet"/>
    <title>
        R√©initialiser le mot de passe
    </title>
</head>
<body class="g-sidenav-show  bg-gray-200">

<div class="d-flex justify-content-center align-items-center ">
    <div class=" col-lg-9 mt-lg-0 mt-4 ">
        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <div class="container-fluid py-4">
                <div class="row">
                    <div class="col-lg-6 col-md-8 mx-auto">
                        <div class="card z-index-0">
                            <div class="card-header text-center pt-4">
                                <h5>R√©initialiser le mot de passe</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">Entrez votre adresse courrielle et votre nouveau mot de passe.</p>
                            </div>
                            <div class="card-footer">
                                @*Affichage du r√©sum√© des validations*@
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <form asp-controller="Compte" asp-action="ResetPassword" method="post" role="form">
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="@Model.Email"></label>
                                        <input type="email" asp-for="@Model.Email" class="form-control" autocomplete="Email"/>
                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="@Model.Password"></label>
                                        <input asp-for="@Model.Password" class="form-control"/>
                                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="@Model.ConfirmPassword"></label>
                                        <input asp-for="@Model.ConfirmPassword" class="form-control"/>
                                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn bg-primary w-100 my-4 mb-2" style="color:white;">R√©initialiser le mot de passe</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!--   Core JS Files   -->
<partial name="PartialViews/_JsPartial"/>
</body>
</html>

@* SweetAlert2 pour afficher une notification de succ√®s ou d'erreur *@
<script>
  // Attache un gestionnaire d'√©v√©nements de soumission √† tous les formulaires sur la page
  $('form').submit(function(e) {
    e.preventDefault();  // Emp√™che la soumission par d√©faut du formulaire
    $.ajax({    // Obtient l'URL d'action du formulaire
      url: $(this).attr('action'),
      type: 'POST',
      data: $(this).serialize(),    // S√©rialise les donn√©es du formulaire pour les envoyer dans la requ√™te
      success: function(result) {
        Swal.fire({
          icon: 'success',
          title: 'Votre mot de passe a √©t√© modifi√© avec succ√®s!üòâ',
          showConfirmButton: false,
          timer: 3000
        }).then((result) => {
          window.location.href = '@Url.Action("Login", "Compte")';
        });
      },
      error: function(xhr, status, error) {
        Swal.fire({
          icon: 'error',
          title: 'Une erreur s\'est produite',
          text: xhr.responseText
        });
      }
    });
  });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>


}