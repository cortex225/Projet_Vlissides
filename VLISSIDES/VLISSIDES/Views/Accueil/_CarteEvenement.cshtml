@using VLISSIDES.ViewModels.Accueil;
@model _EventCardVM;

@{
    //Juste pour pouvoir différencier les cartes
    Random random = new Random();
    int randomNumber = random.Next(1, 100000);
}

<div class="item">
    <div class="card event" style="width: 18rem">
        <img src="@Model.monEvenement.Image"
             class="card-img-top"
             alt="..." />
        <div class="card-body">
            <h5 class="card-title">@Model.monEvenement.Nom @randomNumber</h5>
            <p class="card-text">
                @Model.monEvenement.Description
            </p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
</div>