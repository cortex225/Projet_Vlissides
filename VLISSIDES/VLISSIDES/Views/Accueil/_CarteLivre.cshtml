@using VLISSIDES.ViewModels.Accueil;
@model _LivreCardVM;

@{
    //Juste pour pouvoir différencier les cartes
    Random random = new Random();
    int randomNumber = random.Next(1, 100000);
}

<div class="item livre">
    <div class="card" style="width: 14rem">
        <div class="imgDiv">
            <img src="@Model.monLivre.Couverture"
                 class="card-img-top imgLivre"
                 alt="..." />
        </div>
        <div class="card-body">
            <h6 class="card-title">@Model.monLivre.Titre @randomNumber</h6>
            <partial name="_Etoiles.cshtml" />
            <!--p class="card-text">
                Some quick example text to build on the card title and
                make up the bulk of the card's content.

                Testestestest
            </p-->

            <hr />
            <h6>Catégories reliées: </h6>
            <a href="#" class="btn btn-secondary btnCategorie">Action</a>
            <a href="#" class="btn btn-secondary btnCategorie">Science-fiction</a>
        </div>
    </div>
</div>

<style>
    .btnCategorie{
        margin: 4px;
        font-size: 10px;
        padding: 6px;
    }

    .imgLivre{
        width: 60%;
        height: 60%;
    }

    .imgDiv{
        display: flex;
        justify-content: center;
    }

    .livre{
        margin-right: -20px;
        margin-left: -20px;
    }
</style>