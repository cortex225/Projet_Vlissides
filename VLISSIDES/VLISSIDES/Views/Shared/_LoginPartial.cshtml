@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@*
    Cette vue partielle sert à afficher les liens pour se connecter.

    Il y a un if qui détermine si l'utilisateur est connecté

    Si connecté:
        Un message de bienvenue disant "Hello [NOM UTILISATEUR]"
        Un lien pour se déconnecter

    Si non connecté:
        Un lien pour se connecter
        Un lien pour s'inscrire
*@

<div id="boutonseconection">
    @if (SignInManager.IsSignedIn(User))
    {
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Salut @UserManager.GetUserAsync(User).Result.UserName!👋</a>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Accueil", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link rounded-pill  bg-secondary  text-white px-4">Se déconnecter <i class="fa-solid fa-arrow-right-from-bracket px-2"></i></button>
            </form>
    }
    else
    {
            <a class="nav-link rounded-pill btn btn-outline-secondary mx-2 " asp-area="" asp-controller="Compte" asp-action="Login">Se connecter</a>
            <a class="nav-link rounded-pill btn bg-primary  text-white px-4" id="btnRegister" asp-area="" asp-Controller="Compte" asp-action="Register">S'inscrire</a>
    }
</div>