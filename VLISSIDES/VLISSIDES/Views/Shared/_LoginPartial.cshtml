@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var nbArticles = Context.Session.GetInt32("NbArticles") ?? 0;
}

@*
    Cette vue partielle sert à afficher les liens pour se connecter.

    Il y a un if qui détermine si l'utilisateur est connecté

    Si connecté:
        Un message de bienvenue disant "Hello [NOM UTILISATEUR]"
        Un lien pour se déconnecter

    Si non connecté:
        Un lien pour se connecter
        Un lien pour s'inscrire
*@

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Utilisateur Connecté : Affichage du compte utilisateur et option de déconnexion -->
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="index">
                <i class="fas fa-user"></i> Salut @UserManager.GetUserAsync(User).Result.UserName.Split("@")[0]👋
            </a>
        </li>
        <!--
        Gérer panier
        -->
        @if (!(User.IsInRole(RoleName.ADMIN) || User.IsInRole(RoleName.EMPLOYE)))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Panier" asp-action="Index">
                    Consulter le panier
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span class="badge badge-panier  " id="nbArticles"></span>
                </a>
            </li>
        }
        <li class="nav-item" div="LoginBTN">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn  btn-link nav-link">
                    <i class="fa-solid fa-arrow-right-from-bracket"></i> Se déconnecter
                </button>
            </form>
        </li>
    }

    else
    {
        <!-- Utilisateur Non Connecté : Options de connexion et d'inscription -->
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Compte" asp-action="Login">
                <i class="fas fa-sign-in-alt"></i> Se connecter
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="btnRegister" asp-area="" asp-Controller="Compte" asp-action="Register">
                <i class="fas fa-user-plus"></i> S'inscrire
            </a>
        </li>
    }

</ul>