@model VLISSIDES.ViewModels.Evenements.EvenementsVM

<div class="event-card card shadow-sm p-3 my-4 bg-white event-card " style="height:250px">


    <div class="row align-items-center my-auto">
         <div class="d-flex justify-content-center w-100 my-2">
             
                          <div class=" stickerIndisponible  badge " style="top: 10px; right: 10px;">Réservé</div>
            </div>
        <div class="col-md-3 text-center text-md-left">
            <img src="@Model.Image" alt="Image de l'événement" class="img-fluid rounded mb-3 mb-md-0">
        </div>
        <div class="col-md-6 text-center text-md-left">
            <h2 class="font-weight-bold mb-3">@Model.Nom</h2>
            <p class="text-muted">@Model.Description</p>
            @{
                if (Model.NbPlacesReservees != Model.NbPlaces)
                {
                    <button class="reserve-btn btn btn-danger" onclick="AnnulerReservation('@Model.Id')">Annuler</button>

                }

            }

        </div>
        <div class="col-md-3 text-center text-md-left event-date-time">
            <div class="mb-2 d-flex align-items-center justify-content-center justify-content-md-start rounded-2 p-2 dateEvent">
                <i class="fas fa-calendar-alt mr-2 mx-2"></i> @Model.DateDebut.Day / @Model.DateDebut.Month / @Model.DateDebut.Year
            </div>
            <div class="mb-2 d-flex align-items-center justify-content-center justify-content-md-start">
                <i class="fas fa-clock mr-2 mx-2"></i> @Model.DateDebut.Hour : @Model.DateDebut.Minute
            </div>
            <div class="d-flex align-items-center justify-content-center justify-content-md-start">
                <i class="fas fa-chair mr-2 mx-2"></i>
                <p>Membres : @Model.NbPlacesMembre 
                    <br />
                    Totales : @Model.NbPlaces</p>
            </div>
            <div class="mb-2 d-flex align-items-center justify-content-center justify-content-md-start">
                Prix: @Model.Prix
            </div>
        </div>
    </div>

</div>