@model List<VLISSIDES.ViewModels.GestionComptes.GestionComptesEmployeVM>
<h1 class="text-center">Employés</h1>
<div class="container">
    <button class="btn btn-primary" onclick="ShowModal('@Url.Action("ShowAjouterEmploye", "GestionComptes")')">
        Ajouter un employé
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Courriel</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Nom</th>
                <td>@item.Courriel</td>
                <td>
                    <button class="btn btn-primary">a</button>
                </td>
                <td>
                    <button class="btn btn-danger" onclick="ShowModal('@Url.Action("ShowDeleteConfirmationEmploye", "GestionComptes" , new { id=item.Id })')">a</button>
                </td>
            </tr>
        }
    </tbody>
</table>