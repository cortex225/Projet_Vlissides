@{
}
@model List<VLISSIDES.ViewModels.GestionComptes.GestionComptesEmployeVM>
<h1 class="text-center">Employés</h1>
<div class="container">
    <button class="btn btn-primary" onclick="ShowModal('@Url.Action("MontrerAjouterEmploye", "GestionComptes")')">
        Ajouter un employé
    </button>
</div>

<table class="table table-responsive">
    <thead>
    <tr>
        <th scope="col">Nom</th>
        <th class="cacher" scope="col">Courriel</th>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Nom</th>
            <td class="cacher">@item.Courriel</td>
            <td >
                <button class="btn btn-primary" onclick="ShowModal('@Url.Action("MontrerModifierCompteEmploye", "GestionComptes", new { id = item.Id })')">Modifier</button>
            </td>
            <td>

                <button class="btn btn-danger" onclick="ShowModal('@Url.Action("ShowDeleteConfirmationEmploye", "GestionComptes", new { id = item.Id })')">Supprimer</button>
            </td>
        </tr>
    }
    </tbody>
</table>