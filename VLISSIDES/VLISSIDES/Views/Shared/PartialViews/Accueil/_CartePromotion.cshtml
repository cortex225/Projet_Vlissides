@model VLISSIDES.ViewModels.Accueil.PromotionCardVM;


<div class="item">

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4 img-promo">
                <img
                    src="@Model.Image"
                    alt="img promotion"
                    class="img-fluid rounded-start"/>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Description</h5>
                    <h6>@Model.Rabais %</h6>
                    <p class="card-text">
                        <pre>@Model.DateDebut - @Model.DateFin</pre>
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>