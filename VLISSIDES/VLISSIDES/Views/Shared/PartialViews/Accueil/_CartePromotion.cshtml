@model VLISSIDES.ViewModels.Accueil.PromotionCardVM;

<div class="item promo-card">
    <div class="event-card shadow-sm bg-white">
        <div class="row align-items-center">
            <!-- Image de l'événement -->
            <div class="col-md-3 text-center text-md-left div-event-img">
                <img src="@Model.Image" alt="Image de l'événement" class="img-fluid rounded mb-3 mb-md- img-event">
            </div>
            <!-- Description et bouton -->
            <div class="col-md-5 text-center text-md-left div-event-nom">
                <h2 class="font-weight-bold mb-2">@Model.Description</h2>
                <p class="text-muted mb-3">Profitez de cette offre exceptionnelle !</p>
                <a asp-action="Index" asp-controller="Recherche">
                    <button class="reserve-btn btn btn-primary btn-block">Acheter Maintenant</button>
                </a>
            </div>
            <!-- Date et rabais -->
            <div class="col-md-4 text-center text-md-left event-date-time">
                <div class="date-box mb-3 p-3 rounded">
                    <i class="fas fa-calendar-alt mr-2"></i>
                    Du: <span class="font-weight-bold">@Model.DateDebut.ToString("f")</span>
                    Au: <span class="font-weight-bold">@Model.DateFin.ToString()</span>
                </div>
                <div class="discount-box p-3 rounded">
                    <i class="fas fa-dollar-sign mr-2"></i>
                    Rabais : <span class="font-weight-bold">@Model.Rabais%</span>
                </div>
            </div>
        </div>
    </div>
</div>