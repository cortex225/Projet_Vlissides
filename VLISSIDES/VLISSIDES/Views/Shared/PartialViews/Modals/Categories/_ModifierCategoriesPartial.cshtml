@{
}
@model VLISSIDES.ViewModels.Categories.CategoriesModifierVM
<div class="modal-header">
    <h5 class="modal-title" id="ModalEditLabel">Modifier Categorie</h5>
</div>
<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col">
            <form asp-action="Modifier" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id"/>
                <div>
                    <label class="control-label" asp-for="Nom"></label>
                    <input class="form-control" asp-for="Nom"/>
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
                <div>
                    <label class="control-label" asp-for="Description"></label>
                    <input class="form-control" asp-for="Description"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @if (Model.ASousCategorie)
                {
                    <div>
                        <label asp-for="ASousCategorie" class="control-label"></label>
                        <input class="form-check-input" type="checkbox" id="cbSousCategorie" asp-for="ASousCategorie" onclick="ShowSousCategorie()">
                    </div>

                    <div id="selectSousCategorie" class="">
                        <label class="control-label" asp-for="ParentId"></label>
                        <select class="form-control" asp-for="ParentId" asp-items="Model.CategoriesParents">
                        </select>
                    </div>
                }
                else
                {
                    <div>
                        <label asp-for="ASousCategorie" class="control-label"></label>
                        <input class="form-check-input" type="checkbox" id="cbSousCategorie" asp-for="ASousCategorie" onclick="ShowSousCategorie()">
                    </div>

                    <div id="selectSousCategorie" class="visually-hidden">
                        <label class="control-label" asp-for="ParentId"></label>
                        <select class="form-control" asp-for="ParentId" asp-items="Model.CategoriesParents">
                        </select>
                    </div>
                }


                <div class="modal-footer">
                    <input type="submit" value="Modifier les changements" class="btn btn-primary"/>
                    <input type="button" class="btn btn-danger " onclick="Annuler()" value="Annuler"></input>
                </div>
            </form>
        </div>
    </div>

</div>
<script type="text/javascript">
    function ShowSousCategorie(){
        var cb = document.getElementById("cbSousCategorie");
        var div = document.getElementById("selectSousCategorie");
        if (cb.checked == true) {
            div.className = "";
        } else {
            div.className = "visually-hidden";
        }
    }
    function Annuler() {
        $('#ModalId').modal('hide');
    }
</script>