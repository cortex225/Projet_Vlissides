@model RegisterVM

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label" asp-for="@Model.FirstName">Prénom</label>
        <input asp-for="@Model.FirstName" class="form-control" autocomplete="off"/>
    </div>
    <div class="col-md-6">
        <label class="form-label" asp-for="@Model.LastName">Nom de famille</label>
        <input asp-for="@Model.LastName" class="form-control" autocomplete="off"/>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label" asp-for="@Model.UserName">Nom d'utilisateur</label>
        <input asp-for="@Model.UserName" class="form-control" autocomplete="off"/>
    </div>
    <div class="col-md-6">
        <label class="form-label" asp-for="@Model.Phone">Téléphone</label>
        <input asp-for="@Model.Phone" class="form-control" autocomplete="off"/>
    </div>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="@Model.Email">Adresse Courriel</label>
    <input type="email" asp-for="@Model.Email" class="form-control" autocomplete="off"/>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="@Model.Password">Mot de passe</label>
    <input asp-for="@Model.Password" class="form-control" autocomplete="off"/>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="@Model.ConfirmPassword">Confirmer le mot de passe</label>
    <input asp-for="@Model.ConfirmPassword" class="form-control" autocomplete="off"/>
</div>

<div class="mb-3 form-check">
    <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for="@Model.Conditions">
    <label class="form-check-label" for="flexCheckDefault">
        J'accepte les <a href="javascript:" class="text-dark font-weight-bolder">conditions générales d'utilisation</a>
    </label>
</div>

<div class="text-center">
    <button type="submit" class="btn btn-primary btn-lg btn-block w-100">S'inscrire</button>
</div>