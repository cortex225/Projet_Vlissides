        <img src="~/img/flat.png" alt="Image" class="img-fluid sofa-img"
             style="width: 300px">

    <div class="row g-5 mb-4 mx-auto">
        <div class="col-lg-4 justify-content-center text-center">

            <div class="mb-4 footer-logo-wrap">
                <a href="#" class="footer-logo">
                    <img src="~/img/Logo/Logo_rond.png" style="width: 300px; top: -10px;"/>
                </a>
            </div>

            <!--
            Liens pour les réseaux sociaux de l'entreprise
            -->
            <ul class="list-unstyled custom-social ">
                <li>
                    <a href="#">
                        <span class="fa-brands fa-facebook-f ">
                        </span>
