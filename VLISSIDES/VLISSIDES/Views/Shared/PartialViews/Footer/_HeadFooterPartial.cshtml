                <li>
                    <a href="#">
                        <span class="fa-brands fa-linkedin"></span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="col-lg-8">
            <div class="row links-wrap">
                <div class="col-6 col-sm-6 col-md-3">
                    <!--
                    Liens divers
                    -->
                    <ul class="list-unstyled">
                        <h5>
                            Explorez
                        </h5>
                        <li>
                            <a asp-action="Info" asp-controller="Accueil">À propos de nous</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Recherche">Catalogue des livres</a>
                        </li>
                        <li>
                            <a asp-action="Login" asp-controller="Compte">Devenir membre</a>
                        </li>
                    </ul>
                </div>

                <div class="col-6 col-sm-6 col-md-3">
                    <ul class="list-unstyled">
                        <h5>
                            Service Client
                        </h5>
                        <li>
                            <a asp-action="Index" asp-controller="HistoriqueCommandes">Retourner un livre</a>
                        </li>


                    </ul>

                </div>
                <!--
                Affiche l'emplacement de la librairie en utilisant une API de Google Maps
                -->
