        <div class="row pt-4">
            <div class="col-lg-6">
                <p class="mb-2 text-center text-lg-start">
                    Copyright &copy;<script>document.write(new Date().getFullYear());</script>. All Rights Reserved. &mdash; Designed with love by VLISSIDES
                </p>
            </div>

            <div class="col-lg-6 text-center text-lg-end">
                <ul class="list-unstyled d-inline-flex ms-auto">
                    
                    <li class="me-4">
                        <a href="~/img/manuel_utilisateur/manuel_utilisateur_membre.pdf" target="_blank">Manuel utilisateur pour membre</a>
                    </li>
                    @if (User.IsInRole(RoleName.ADMIN))
                    {
                        <li>
                            <a href="~/img/manuel_utilisateur/manuel_utilisateur_employe.pdf" target="_blank">Manuel utilisateur pour admin</a>
                        </li>
                    }
                   
                </ul>
            </div>

        </div>
