@model VLISSIDES.ViewModels.GestionCommandes.AffichageCommandeVM
@{
}

<link rel="stylesheet" href="~/css/style-hover.css" asp-append-version="true">
<div id="accordion">
    @foreach (var commande in @Model.ListCommandes)
    {
        <div id="Commande_@commande.Id" class="card my-2 p-2 element-hoverable">
            <div class="row d-flex p-2">
                <div class="col-sm-3 d-flex justify-content-center">
                    <h4 class="card-title my-auto">#@commande.Id</h4>
                </div>
                <div class="col-sm-1 d-flex justify-content-center">
                    <p class="my-auto">@commande.PrixTotal $</p>
                </div>
                <div class="col-sm-2 d-flex justify-content-center">
                    <p class="my-auto">@commande.DateCommande</p>
                </div>
                <div class="col-sm-3 form-group d-flex justify-content-center">
                    <p class="my-auto">@commande.StatutNom</p>
                </div>
                <div class="col-sm-1 d-flex justify-content-center align-self-md-center">

                    <i class="fa-solid fa-circle-info fa-2xl" style="color: #386bc0!important;" type="button" data-toggle="collapse" data-target="#collapseCommandeLivres_@commande.Id"></i>

                </div>
            </div>
            <div class="collapse" id="collapseCommandeLivres_@commande.Id">
                <hr>
                <div class="p-2">
                    <h5 class="">Articles:</h5>
                    <div>
                        @foreach (var item in commande.LivreCommandes)
                        {
                            <div class="row">
                                <div class="col-sm-3 px-4">
                                    @item.Quantite x @item.Livre.Titre
                                </div>
                                <div class="col-sm-2">
                                </div>
                                <div class="col-sm-1 d-flex justify-content-center">
                                    @{
                                        var prix = item.PrixAchat * item.Quantite;
                                    }
                                    @prix $
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>