@{
    var myURL = Context.Request.Host.Value;
    var BASE_URL_RAZOR = Url.Content("~");
}
<link rel="stylesheet" href="~/css/NavBar/NavBarTop.css" asp-append-version="true"/>
<nav class="navbar navbar-expand-lg ">
    <div class="container-fluid">
        <!-- Logo -->
        <a id="IconeNavBar" asp-area="" asp-controller="Accueil" asp-action="Index">
            <img src="~/img/Logo/Logo_sans_fond.png" alt="logo" class="icone-navbar"/>
        </a>
        <!-- Conteneur pour les éléments à gauche (Logo et Navigation) -->
        <div class="d-flex ">
            <!-- Bouton de basculement pour les appareils mobiles -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <partial name="PartialViews/NavBar/_NavigationPartial" />
        </div>


        <!-- Barre de Recherche -->
        <div class="recherche-container mx-auto"id="divRecherche">
            <div class="recherche-group">
                <div id="divOption" class="category-dropdown">
                    <label id="OptionLabel" for="dropdownRechercheNavbar" class="selected-category">Trier par :</label>
                    <select name="dropdownRechercheNavbar" class="form-select recherche-select" id="dropdownRechercheNavbar">
                        <option value="titre" selected onclick="OptionChoisieNavBar('Titre')">Titre</option>
                        <option value="auteur" onclick="OptionChoisieNavBar('Auteur')">Auteur</option>
                        <option value="categorie" onclick="OptionChoisieNavBar('Catégorie')">Catégorie</option>
                    </select>
                </div>
                <input id="barreRechercheNavbar" type="text" class="form-control recherche-input" placeholder="Rechercher..." onkeyup="if (event.key == 'Enter')Recherche()">
                <button id="boutonRechercheNavBar" type="button" class="btn btn-secondary recherche-btn" onclick="RechercheNavBar()">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>

        <!-- Vue partielle contenant tout ce qui est en lien avec les comptes (connexion, inscription, etc...) -->
        <partial name="_LoginPartial"/>
    </div>
</nav>

<script>
    const BASE_URL = @Json.Serialize(BASE_URL_RAZOR);

    function OptionChoisieNavBar(option) {
        document.getElementById("OptionLabel").innerHTML = option;
    }

    function RechercheNavBar() {
        window.location.href = BASE_URL
            + "/Recherche/index?motCles=" + document.getElementById('barreRechercheNavbar').value
            + "&criteres=" + document.getElementById('dropdownRechercheNavbar').value;
    }
</script>