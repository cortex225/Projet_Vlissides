@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!-- Premier groupe de liens. Les liens peuvent changer, c'est juste pour le design -->
<div class="collapse navbar-collapse " id="navbarContent">
    <ul class="navbar-nav ">

        <li class="nav-item ">
            <a class="nav-link first text-dark" asp-area="" asp-controller="Accueil" asp-action="Index">Accueil</a>
        </li>
        @if (!User.Identity.IsAuthenticated || User.IsInRole(RoleName.MEMBRE))
        {
            <!-- Dropdown pour Librairie -->
            <li class="nav-item dropdown">
                <a class="nav-link first dropdown-toggle text-dark" href="#" id="navbarDropdownMembre" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Librairie
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMembre">
                    <a class="dropdown-item" asp-area="" asp-controller="Livres" asp-action="Index">Catalogue de Livres</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Evenements" asp-action="Index">Évènements</a>

                </div>
            </li>

        }
        @if (User.IsInRole(RoleName.MEMBRE))
        {
            <li class="nav-item dropdown ">
                <a class="nav-link dropdown-toggle text-dark first" href="#" id="navbarDropdownMembre" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Espace Membre
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMembre">
                    <a class="dropdown-item" asp-area="" asp-controller="Commandes" asp-action="Index">Mes commandes</a>
                    <a class="dropdown-item" asp-area="" asp-controller="LivreUtilisateur" asp-action="Index">Mes livres</a>
                </div>
            </li>
        }
        <!-- Dropdown pour Gestion -->
               @if (User.IsInRole(RoleName.EMPLOYE) || User.IsInRole(RoleName.ADMIN))
               {
                   <li class="nav-item dropdown">
                       <a class="nav-link first dropdown-toggle text-dark dropdown-jl" href="#" id="navbarDropdownGestion" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           Gestion
                       </a>
                       <div class="dropdown-menu" aria-labelledby="navbarDropdownGestion">
                           <a class="dropdown-item" asp-area="" asp-controller="GestionLivres" asp-action="Index">Inventaire</a>
                           <a class="dropdown-item" asp-area="" asp-controller="GestionAuteurs" asp-action="Index">Auteurs</a>
                           <a class="dropdown-item" asp-area="" asp-controller="GestionMaisonEditions" asp-action="Index">Maison d'éditions</a>
                           <a class="dropdown-item" asp-area="" asp-controller="GestionCategories" asp-action="Index">Catégories</a>
                           <a class="dropdown-item" asp-area="" asp-controller="GestionCommandes" asp-action="Index">Commandes</a>
                           <a class="dropdown-item" asp-area="" asp-controller="GestionEvenements" asp-action="Index">Évènements</a>
                           <a class="dropdown-item" asp-area="" asp-controller="GestionPromotions" asp-action="Index">Promotions</a>
                           @if (User.IsInRole(RoleName.ADMIN))
                           {
                               <div class="dropdown-divider"></div>
                               <a class="dropdown-item" asp-area="" asp-controller="GestionComptes" asp-action="Index">Gestion des comptes</a>
                           }
                       </div>
                   </li>
               }
    </ul>
</div>

