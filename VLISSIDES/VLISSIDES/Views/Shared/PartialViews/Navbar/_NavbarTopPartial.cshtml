@{
    string myURL = Context.Request.Host.Value;
    string BASE_URL_RAZOR = Url.Content("~");
}
<link rel="stylesheet" href="~/css/NavBar/navbar.css" />
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-0 px-4 container-fluid" id="navTop">
    <!-- Logo fourmi ailée. Ce logo permet de retourner à l'accueil -->
    <a class="navbar-brand" asp-area="" asp-controller="Accueil" asp-action="Index">
        <img src="~/img/Logo/Logo_sans_fond.png" alt="logo" class="brand-logo" />
    </a>

    <!-- Barre de recherche -->
    <div id="divRecherche" class="navbar-nav flex-grow-1 recherche-container input-group mb-3 recherche-group">
        <div class="category-dropdown dropdown">
            <label id="OptionLabel" for="dropdownRechercheNavbar" class="selected-category">Trier par :</label>
            <select name="dropdownRechercheNavbar" class="form-select recherche-select" id="dropdownRechercheNavbar">
                <option value="titre" selected onclick="OptionChoisie('Titre')">Titre</option>
                <option value="auteur" onclick="OptionChoisie('Auteur')">Auteur</option>
                <option value="categorie" onclick="OptionChoisie('Catégorie')">Catégorie</option>
            </select>
        </div>
        <input id="barreRechercheNavbar" type="text" class="form-control recherche-input" placeholder="Rechercher..." onkeyup="if (event.key == 'Enter')Recherche()">
        <button type="button" class="btn btn-secondary recherche-btn" style="border-radius: 10rem 25rem 25rem 10rem;" onclick="Recherche()">
            <i class="fa-solid fa-magnifying-glass fa-sm"></i>
        </button>
    </div>

    <!-- Vue partielle contenant tout ce qui est en lien avec les comptes (connexion, inscription, etc...) -->
    <partial name="_LoginPartial" />
</nav>
<script>
    const BASE_URL = @Json.Serialize(BASE_URL_RAZOR);
</script>
<script>
    function OptionChoisie(option) {
        document.getElementById("OptionLabel").innerHTML = option;
    }
    function Recherche() {
        window.location.href = BASE_URL
            + "/Recherche/index?motCles=" + document.getElementById('barreRechercheNavbar').value
            + "&criteres=" + document.getElementById('dropdownRechercheNavbar').value;
    }
</script>