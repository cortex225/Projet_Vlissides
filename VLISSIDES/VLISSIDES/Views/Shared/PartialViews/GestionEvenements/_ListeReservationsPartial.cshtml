@{
}
@model List<VLISSIDES.ViewModels.GestionEvenements.GestionEvenementsReservationVM>
<link rel="stylesheet" href="~/css/style-hover.css" asp-append-version="true">

<div class="mb-3 mx-3">
    <div class="row px-2">
        <div class="col-3 text-center">
            Id
        </div>
        <div class="col-3 text-center">
            Nom de l'utilisateur
        </div>
        <div class="col-3 text-center">
            Nom de l'évenement
        </div>
        <div class="col-3 text-center">

        </div>

    </div>

</div>
@foreach (var item in Model)
{
    <div id="@item.Id" class="card mb-2 mx-3 element-hoverable">
        <div class="card-body row p-2 align-items-center">
            <div class=" col-3 text-center">
                @Html.DisplayFor(modelItem => item.Id)

            </div>
            <div class="col-3 text-center">
                @Html.DisplayFor(modelItem => item.NomUtilisateur)
            </div>
            <div class="col-3 text-center">
                @Html.DisplayFor(modelItem => item.NomEvenement)
            </div>
            <div class="col-3 text-center d-flex flex-row justify-content-around h-40">

                <a class="btn btn-primary p-2" onclick="ShowModal('@Url.Action("MontrerConfirmerDemande", "GestionEvenements", new { id = item.Id })')" data-toggle="tooltip" title="Confirmer">
                    Confirmer
                </a>
                <a class="btn btn-danger p-2" data-toggle="tooltip" title="Annuler" onclick="ShowModal('@Url.Action("MontrerAnnulerDemande", "GestionEvenements", new { id = item.Id })')">
                    Annuler
                </a>


            </div>
        </div>
    </div>
}