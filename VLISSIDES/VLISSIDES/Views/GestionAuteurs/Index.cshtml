<!--Script pour liste-->
<script type="text/javascript">
    function AfficherListe(page= @ViewBag.CurrentPage) {
        // Récupère la valeur du mot-clé de recherche à partir de l'élément d'entrée
        var motCle = document.getElementById("inputRechercherAuteur").value || "";
        
        // Construit l'URL pour la requête API en utilisant le mot-clé et le numéro de page
        var apiUrl = BASE_URL + '/GestionAuteurs/AfficherListe?motCle=' + motCle + '&page=' + page;
        
        // Effectue une requête GET à l'API
        fetch(apiUrl, {
            method: "GET"
        }).then((response) => {
            // Convertit la réponse en texte
            return response.text();
        }).then((result) => {
            // Met à jour le contenu de la div avec le résultat
            var div = document.getElementById("ListeAuteurPartial");
            div.innerHTML = result;
        }).catch(error => {
            // Affiche une erreur dans la console en cas d'échec de la requête
            console.error('Erreur lors de la récupération de la liste des auteurs', error);
        });
    }


    AfficherListe();
</script>
<!--Script pour Ajouter-->
<script type="text/javascript">
    function AjouterAuteur() {
        var form = document.getElementById("champAjouter");
        var data = new FormData(form);

        //var csrfToken = form.querySelector(­'[name="__RequestVerificationToken"]').value;
        fetch(BASE_URL + '/GestionAuteurs/Ajouter', {
            method: "POST",
            body: data
            // headers: {
            //    RequestVerificationToken: csrfToken,
            // },
        }).catch(error => {
            console.error('Échec du fetch pour ajouter auteur', error);
        }).then((response) => {
            AfficherListe();
        });
        form.reset();
    }
</script>
