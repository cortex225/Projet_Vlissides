<!--Script pour Modifier-->
<script type="text/javascript">
        function ModifierAuteur(id = "", nom = "") {
        fetch(BASE_URL+'/GestionAuteurs/ModifierAuteur?id=' + id + '&nom=' + document.getElementById(id + " " + nom).value, {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            }).catch(error => console.error('Échec du fetch pour modifier le nom'))
            .then((response) => { 
                disableButton(id);
                document.getElementById("NomAuteur_" + id).innerText = document.getElementById(id + " " + nom).value;
            });
        }
    </script>

<!--Script pour la supprimation-->
<script type="text/javascript">
            function SupprimerAuteur(id = "") {
        fetch(BASE_URL+`/GestionAuteurs/SupprimerAuteur?id=${id}`, {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            }).catch(error => {
                console.error('Échec du fetch pour supprimer la maison', error);
            }).then(() => {
                document.getElementById(`${id}`).remove();
                $('#ModalId').modal('hide'); // Ferme la modale
            });
        }


        // ModalScript
        function ShowModal($url) {
            $.get($url, function (result) {
                $('.modal-content').html(result);
                $('.modal').modal('show');
            });
        }
    </script>
