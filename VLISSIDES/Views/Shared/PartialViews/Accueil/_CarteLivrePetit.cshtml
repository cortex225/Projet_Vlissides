@model VLISSIDES.ViewModels.Accueil.LivreCardVM;

<div class="item livrePetit livre @Model.Categories">
    <div class="cardLivre" style="width: 12rem">
        <div class="imgDiv">
            <img src="@Model.Couverture"
                 class="card-img-top imgLivrePetit"
                 alt="Couverture du livre"/>
        </div>
        <div class="card-body">
            <h6 class="card-title">@Model.Titre</h6>
            <partial model="Model.Note" name="_Etoiles.cshtml"/>

            <h6>@Model.Prix $</h6>

            <pre>@Model.Auteurs</pre>
        </div>
    </div>
</div>